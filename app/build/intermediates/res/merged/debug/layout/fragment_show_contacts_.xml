<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.a8.newcontacts.fragment.ShowContacts_Fragment">


    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/myPtrCFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_duration_to_close="200"
        app:ptr_duration_to_close_header="1000"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_resistance="1.7">

        <ListView
            android:id="@+id/lv_contact"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scrollbars="none">

        </ListView>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    <TextView
        android:id="@+id/float_letter"
        android:alpha="0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="666"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/float_letter_background"
        android:gravity="center"
        android:textSize="40sp"/>

    <com.example.a8.newcontacts.view.QuickBar
        android:id="@+id/quickBar"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>


</RelativeLayout>
