<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a8.newcontacts.AddContactActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@mipmap/ic_arrow_back_24dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="#fff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="仅保存到手机联系人,不同步联系人"
                android:textColor="#151414"/>

            <ImageView
                android:id="@+id/iv_perosn_24dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@id/tv_tips"
                android:layout_below="@id/tv_tips"
                android:layout_marginTop="24dp"
                android:alpha="0.6"
                android:paddingBottom="10dp"
                android:src="@mipmap/ic_person_black_24dp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_perosn_24dp"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_toRightOf="@+id/iv_perosn_24dp"
                android:hint="姓名"
                android:paddingBottom="12dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@id/tv_tips"
                android:layout_below="@id/et_name"
                android:layout_marginTop="24dp"
                android:alpha="0.6"
                android:paddingBottom="10dp"
                android:src="@mipmap/ic_camera_alt_black_24dp"/>

            <ImageView
                android:id="@+id/iv_person_120dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignLeft="@id/et_name"
                android:layout_alignTop="@id/iv_camera"
                android:layout_toRightOf="@id/iv_camera"
                android:background="#d1d0d0"
                android:src="@mipmap/ic_person_white_120dp"/>

            <Button
                android:background="@drawable/ripple_bg_rectangle"
                android:id="@+id/btn_change"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/tv_tips"
                android:layout_alignRight="@+id/tv_tips"
                android:layout_alignTop="@+id/iv_person_120dp"
                android:text="更改"/>

            <ImageView
                android:id="@+id/iv_phone_24dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@id/tv_tips"
                android:layout_below="@id/iv_person_120dp"
                android:layout_marginTop="24dp"
                android:alpha="0.6"
                android:paddingBottom="10dp"
                android:src="@mipmap/ic_phone_24dp"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_phone_24dp"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_toRightOf="@+id/iv_phone_24dp"
                android:hint="电话"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_email_24dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@id/tv_tips"
                android:layout_below="@id/iv_phone_24dp"
                android:layout_marginTop="24dp"
                android:alpha="0.6"
                android:paddingBottom="10dp"
                android:src="@mipmap/ic_email_24dp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_email_24dp"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_toRightOf="@+id/iv_email_24dp"
                android:hint="邮箱"
                android:paddingBottom="12dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_place_24dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@id/tv_tips"
                android:layout_below="@id/iv_email_24dp"
                android:layout_marginTop="24dp"
                android:alpha="0.6"
                android:paddingBottom="10dp"
                android:src="@mipmap/ic_place_24dp"/>

            <EditText
                android:id="@+id/et_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_place_24dp"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_toRightOf="@+id/iv_place_24dp"
                android:hint="地址"
                android:paddingBottom="12dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_business_black_24dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@id/tv_tips"
                android:layout_below="@id/iv_place_24dp"
                android:layout_marginTop="24dp"
                android:alpha="0.6"
                android:paddingBottom="10dp"
                android:src="@mipmap/ic_business_black_24dp"/>

            <EditText
                android:id="@+id/et_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_business_black_24dp"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_toRightOf="@+id/iv_business_black_24dp"
                android:hint="公司"
                android:paddingBottom="12dp"
                android:textSize="16sp"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
